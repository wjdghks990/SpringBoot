<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.githrd.demo_transaction.dao.ProductOutMapper">

	<!-- 전체조회 -->
	<select id="selectList" resultType="product">
		select * from product_out order by idx
	</select>
	
	<select id="selectOne" parameterType="int" resultType="product">
		select * from product_out where idx = #{idx}
	</select>
	
	<!-- 추가 -->
	<insert id="insert" parameterType="product">
		insert into product_out values(
									  seq_product_out_idx.nextVal,
									  #{name},
									  #{cnt},
									  sysdate
									 )
	</insert>
	
	<!-- 수량 수정 -->
	<update id="update" parameterType="product">
		update product_out set cnt=#{cnt}, 
						      regdate=sysdate
						      where idx = #{idx}
	</update>
	
	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		delete from product_out where idx = #{idx}
	</delete>

</mapper>